<Window x:Class="DndGUI.UpdateStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndGUI"
        mc:Ignorable="d"
        Title="UpdateStatsWindow" Height="240" Width="240">
    <Window.Background>
        <ImageBrush ImageSource="/Images/o2.png" 
                    Stretch="UniformToFill"
                    Opacity="0.8"
                    />
    </Window.Background>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Left" Margin="6,0,0,0" 
               Width="73" Content="HP" FontWeight="Bold" FontSize="14" 
               Foreground="#FFDFF8D0" Background="{x:Null}" 
               BorderBrush="{x:Null}" />
        <Label HorizontalAlignment="Left" Margin="6,0,0,0" 
               Width="73" Content="LVL" Grid.Row="1" Foreground="#FFDFF8D0" 
               FontWeight="Bold" BorderBrush="{x:Null}" Background="{x:Null}" 
               FontSize="14" />
        <Label HorizontalAlignment="Left" Margin="6,3,0,0" 
               Width="73" Content="AC" Grid.Row="2" FontWeight="Bold" 
               FontSize="14" Background="{x:Null}" BorderBrush="{x:Null}" 
               Foreground="#FF2E584A" VerticalAlignment="Top" />
        <Label HorizontalAlignment="Left" Margin="6,0,0,0" 
               Width="73" Content="GLD" Grid.Row="3" Background="{x:Null}"
               FontSize="14" FontWeight="Bold" Foreground="#FF30584E" 
               BorderBrush="{x:Null}" />


        <TextBox x:Name="txtHpDelta" HorizontalAlignment="Left" Height="24" Margin="90,0,0,0"
                 TextWrapping="Wrap" Text="0" 
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 FontWeight="Bold" BorderBrush="#FFDFF8D0"
                 VerticalAlignment="Center" Width="120"/>

        <Button x:Name="btnHpApply" Content="OK" HorizontalAlignment="Right" Height="28" 
                Margin="0,0,6,0" Grid.Row="0" Width="60" 
                BorderThickness="2"
                Foreground="#FFDFF8D0" Background="#FF89C06F" 
                FontWeight="Bold" BorderBrush="#FFDFF8D0"
                Click="BtnHpApply_Click"/>


        <TextBox x:Name="txtLvlCount" Grid.Row="1" HorizontalAlignment="Left" Height="24" Margin="90,0,0,0"
                 TextWrapping="Wrap" Text="1" 
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 FontWeight="Bold" BorderBrush="#FFDFF8D0"
                 VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnLvlUp" Content="UP!" HorizontalAlignment="Right" Height="28" 
                Margin="0,0,6,0" Grid.Row="1" Width="60" 
                BorderThickness="2"
                Foreground="#FFDFF8D0" Background="#FF89C06F" 
                FontWeight="Bold" BorderBrush="#FFDFF8D0"
                Click="BtnLvlUp_Click"/>


        <TextBox x:Name="txtAcDelta" Grid.Row="2" HorizontalAlignment="Left" Height="24" Margin="90,0,0,0"
                 TextWrapping="Wrap" Text="1" 
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 FontWeight="Bold" BorderBrush="#FFDFF8D0"
                 VerticalAlignment="Center" Width="120"/>

        <Button x:Name="btnAcApply" Content="OK" HorizontalAlignment="Right" Height="28" 
                Margin="0,0,6,0" Grid.Row="2" Width="60" 
                BorderThickness="2"
                Foreground="#FFDFF8D0" Background="#FF89C06F" 
                FontWeight="Bold" BorderBrush="#FFDFF8D0"
                Click="BtnAcApply_Click"/>


        <TextBox x:Name="txtGoldDelta" Grid.Row="3" HorizontalAlignment="Left" Height="24" Margin="90,0,0,0"
                 TextWrapping="Wrap" Text="0" 
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 FontWeight="Bold" BorderBrush="#FFDFF8D0"
                 VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btnGoldApply" Content="OK" HorizontalAlignment="Right" Height="28" 
                Margin="0,0,6,0" Grid.Row="3" Width="60" 
                BorderThickness="2"
                Foreground="#FFDFF8D0" Background="#FF89C06F" 
                FontWeight="Bold" BorderBrush="#FFDFF8D0"
                Click="BtnGoldApply_Click"/>

        <Button x:Name="btnOk" Content="OK" Height="30" Grid.Row="4" Width="80" HorizontalAlignment="Center"
            BorderThickness="2"
            Foreground="#FF30584E" Background="#FF89C06F" 
            FontWeight="Bold" BorderBrush="#FF30584E" Click="BtnOk_Click"/>
    </Grid>
</Window>

