<Window x:Class="DndGUI.EdycjaPostaciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndGUI"
      
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        mc:Ignorable="d"
        Title="Edycja Postaci" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Images/o2.png" 
                    Stretch="UniformToFill"
                    Opacity="0.8"
                    />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="150" Height="156*"/>
            <RowDefinition MinHeight="25" Height="52*"/>

            <RowDefinition Height="281*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="180" Width="144*"/>
            <ColumnDefinition Width="Auto" MinWidth="201.69"/>
            <ColumnDefinition MinWidth="180" Width="144*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="1" Grid.Row="0"
               Source="Images/dragon.png" Visibility="Visible" Margin="64,10,8,6"/>

        <ComboBox x:Name="charactersComboBox" Grid.Row="0" Grid.Column="0"
                  Foreground="#FF316956"
                  FontWeight="Bold"
                  Background="#FFDFF8D0" BorderBrush="{x:Null}" 
                  Margin="14,10,10,102"
                  SelectionChanged="charactersComboBox_SelectionChanged"
                   IsEditable="True" IsReadOnly="True" 
                    Text="Wybierz postać" FontSize="14"/>

        <Label Height="30" Width="74" Grid.Row="0" 
               Grid.Column="0" HorizontalAlignment="Left" 
               Margin="10,66,0,0" 
               BorderBrush="{x:Null}"
                   Background="{x:Null}" 
                   Foreground="#FFDFF8D0" 
                   FontWeight="Bold" FontSize="16"
               VerticalAlignment="Top"
               Content="Klasa"/>

        <Label Height="30" Width="74" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" 
            Margin="10,111,0,0" 
            BorderBrush="{x:Null}"
                   Background="{x:Null}" 
                   Foreground="#FFDFF8D0" 
                   FontWeight="Bold" FontSize="16"
            Content="Rasa"
            VerticalAlignment="Top"/>

        <hc:TextBox x:Name="txtClass" HorizontalAlignment="Left" 
            Grid.Row="0" Grid.Column="0"
            Height="35" Margin="89,66,0,0"
            TextWrapping="Wrap" 
            IsReadOnly="True"
            FontWeight="Bold"
            Foreground="#FF316956"
            Background="#FFDFF8D0" BorderBrush="{x:Null}"
            VerticalAlignment="Top" Width="192"/>

        <hc:TextBox x:Name="txtRace" HorizontalAlignment="Left" 
            Grid.Row="0" Grid.Column="0"
            Height="35" Margin="89,111,0,0" 
            IsReadOnly="True"
            FontWeight="Bold"
            Foreground="#FF316956"
            Background="#FFDFF8D0" BorderBrush="{x:Null}"
            TextWrapping="Wrap"  
            VerticalAlignment="Top" Width="192"/>

        <hc:Badge x:Name="badgeLvl" Content="LVL" 
                  HorizontalAlignment="Left" Height="16" 
                  Background="#FF89C06F" 
                  Foreground="#FFDFF8D0"
                      FontSize="13"
                    BorderThickness="2"
                    FontWeight="Bold"
                  BorderBrush="#FFDFF8D0"
                  Margin="5,125,0,0" VerticalAlignment="Top" 
                  Width="45" Grid.Column="1"/>

        <hc:Badge x:Name="badgeHp" Content="HP" 
            HorizontalAlignment="Left" Height="16" 
                  VerticalAlignment="Top" Width="45" Margin="5,96,0,0"
                    Background="#FF89C06F" 
                      Foreground="#FFDFF8D0"
                      BorderBrush="#FFDFF8D0"
                      FontSize="13"
                        BorderThickness="2"
                        FontWeight="Bold"
                  Grid.Column="1"/>

        <hc:Badge x:Name="badgeAc" Content="AC" 
            HorizontalAlignment="Left" Height="17" 
                  VerticalAlignment="Top"
                  Width="45"  
                  FontSize="13"
                  BorderThickness="2"
                  FontWeight="Bold"
                    Background="#FF89C06F" 
                      Foreground="#FFDFF8D0"
                      BorderBrush="#FFDFF8D0"
                  Grid.Column="1" Margin="5,66,0,0"/>

        <Button Content="Zapisz zmiany" 
                x:Name="btnSaveChanges"
                Height="35" 
                BorderThickness="2"
                FontSize="16" 
                Background="#FF89C06F" Foreground="#FF316956" 
                FontWeight="Bold" BorderBrush="#FF316956"
                Grid.Row="1" Width="186" Grid.Column="1"
                Click="SaveChanges_Click"/>

        <ListView x:Name="listViewProficiencies" Grid.Column="2"
          Margin="10,10,10,10" Grid.RowSpan="2"
                  Background="#FFDFF8D0"
                  FontWeight="Bold" FontSize="16" BorderBrush="#FFDFF8D0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Umiejętności" Width="260">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#FF316956"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <hc:Badge x:Name="badgeGold" Content="GLD" 
            HorizontalAlignment="Left" Height="16"
                  VerticalAlignment="Top" Width="45"
                  Background="#FF89C06F" 
                  Foreground="#FFDFF8D0" 
                    FontWeight="Bold" FontSize="13"
                 BorderThickness="2"
                 BorderBrush="#FFDFF8D0"
                  Margin="5,38,0,0" Grid.Column="1" RenderTransformOrigin="0.512,0.598"/>

        <ListView x:Name="listViewEquipment" Grid.Row="2"
            Margin="10,10,10,17"
                  Background="#FFDFF8D0"
                  FontSize="16" FontWeight="Bold" Foreground="#FF316956" BorderBrush="#FFDFF8D0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ekwipunek" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="10,61,0,0" 
            VerticalAlignment="Top"
            Background="#FF89C06F"
            Content="DEX" FontSize="14" FontWeight="Bold" 
            BorderThickness="2"
            Foreground="#FF316956" BorderBrush="#FF316956"/>
        <TextBox x:Name="txtDextBonus" Grid.Column="1" 
                 IsReadOnly="True"
            HorizontalAlignment="Left" Height="41" 
            Margin="10,20,0,0" TextWrapping="Wrap" 
            Text="+2" VerticalAlignment="Top" 
            Width="40" 
            FontSize="18" Grid.Row="2"
             FontWeight="Bold"
             BorderThickness="2"
             BorderBrush="#FF316956" Background="#FFDFF8D0" 
             Foreground="#FF316956"/>
        <Label x:Name="lblDextValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="50,20,0,0" 
                    Background="#FF89C06F"
          FontWeight="Bold" 
            BorderThickness="2"
            Foreground="#FF316956" BorderBrush="#FF316956"
                VerticalAlignment="Top"
            Content="17" FontSize="14"/>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="116,61,0,0" 
            VerticalAlignment="Top"
               Background="#FF89C06F"
                 FontSize="14" FontWeight="Bold" 
                BorderThickness="2"
                Foreground="#FF316956" BorderBrush="#FF316956"
            Content="CONST"/>
        <TextBox x:Name="txtConsBonus" Grid.Column="1" 
            HorizontalAlignment="Left" Height="41" 
            Margin="116,20,0,0" TextWrapping="Wrap"
                 IsReadOnly="True"
            Text="+2" VerticalAlignment="Top" 
            Width="40" 
            FontSize="18" Grid.Row="2"
                       FontWeight="Bold"
                BorderThickness="2"
            BorderBrush="#FF316956" Background="#FFDFF8D0" 
                Foreground="#FF316956"/>
        <Label x:Name="lblConsValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="156,20,0,0" 
            VerticalAlignment="Top"
            Background="#FF89C06F"
            FontWeight="Bold" 
            BorderThickness="2"
            Foreground="#FF316956" BorderBrush="#FF316956"
            Content="17" FontSize="14"/>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="10,143,0,0" 
            VerticalAlignment="Top"
                Background="#FF89C06F"
               FontSize="14" FontWeight="Bold" 
              BorderThickness="2"
              Foreground="#FF316956" BorderBrush="#FF316956"
            Content="CHAR"/>
        <TextBox x:Name="txtCharBonus" Grid.Column="1" 
                 IsReadOnly="True"
            HorizontalAlignment="Left" Height="41" 
            Margin="10,102,0,0" TextWrapping="Wrap" 
            Text="+2" VerticalAlignment="Top" 
            Width="40"  
            FontSize="18" Grid.Row="2"
                       FontWeight="Bold"
             BorderThickness="2"
            BorderBrush="#FF316956" Background="#FFDFF8D0" 
            Foreground="#FF316956"/>
        <Label x:Name="lblCharValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="50,102,0,0" 
            VerticalAlignment="Top"
            Content="17"        Background="#FF89C06F"
         FontSize="14" FontWeight="Bold" 
        BorderThickness="2"
        Foreground="#FF316956" BorderBrush="#FF316956"/>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="116,143,0,0" 
            VerticalAlignment="Top"
            Background="#FF89C06F"
            FontSize="14" FontWeight="Bold" 
            BorderThickness="2"
            Foreground="#FF316956" BorderBrush="#FF316956"
            Content="STR"/>

        <TextBox x:Name="txtStrBonus" Grid.Column="1" 
                 IsReadOnly="True"
            HorizontalAlignment="Left" Height="41" 
            Margin="116,102,0,0" TextWrapping="Wrap" 
            Text="+2" VerticalAlignment="Top" 
            Width="40" 
            FontSize="18" Grid.Row="2"
                       FontWeight="Bold"
             BorderThickness="2"
                BorderBrush="#FF316956" Background="#FFDFF8D0" 
     Foreground="#FF316956"/>
        <Label x:Name="lblStrValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="156,102,0,0" 
            VerticalAlignment="Top"
            Content="17"        Background="#FF89C06F"
         FontSize="14" FontWeight="Bold" 
        BorderThickness="2"
        Foreground="#FF316956" BorderBrush="#FF316956"/>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="10,225,0,0" 
                Background="#FF89C06F"
               FontSize="14" FontWeight="Bold" 
              BorderThickness="2"
              Foreground="#FF316956" BorderBrush="#FF316956"
                        VerticalAlignment="Top"
            Content="WIS"/>
        <TextBox x:Name="txtWisBonus" Grid.Column="1" 
            HorizontalAlignment="Left" Height="41" 
            Margin="10,184,0,0" TextWrapping="Wrap" 
                 IsReadOnly="True"
            Text="+2" VerticalAlignment="Top" 
            Width="40" 
            FontSize="18" Grid.Row="2"
                       FontWeight="Bold"
             BorderThickness="2"
        BorderBrush="#FF316956" Background="#FFDFF8D0" 
     Foreground="#FF316956"/>
        <Label x:Name="lblWisValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="50,184,0,0" 
            VerticalAlignment="Top"     
            Content="17"        Background="#FF89C06F"
         FontSize="14" FontWeight="Bold" 
        BorderThickness="2"
        Foreground="#FF316956" BorderBrush="#FF316956"/>

        <Label Height="30" Width="80" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="116,225,0,0" 
                Background="#FF89C06F"
               FontSize="14" FontWeight="Bold" 
              BorderThickness="2"
              Foreground="#FF316956" BorderBrush="#FF316956"
                        VerticalAlignment="Top"
            Content="INT"/>
        <TextBox x:Name="txtIntBonus" Grid.Column="1" 
            HorizontalAlignment="Left" Height="41" 
                 IsReadOnly="True"
            Margin="116,184,0,0" TextWrapping="Wrap" 
            Text="+2" VerticalAlignment="Top" 
            Width="40" 
            FontSize="18" Grid.Row="2" 
                  FontWeight="Bold"
                BorderThickness="2"
            BorderBrush="#FF316956" Background="#FFDFF8D0" 
                 Foreground="#FF316956"/>
        <Label x:Name="lblIntValue" Height="41" Width="40" Grid.Row="2" 
            Grid.Column="1" HorizontalAlignment="Left" 
            Margin="156,184,0,0" 
            VerticalAlignment="Top"
            Content="17"        Background="#FF89C06F"
         FontSize="14" FontWeight="Bold" 
        BorderThickness="2"
        Foreground="#FF316956" BorderBrush="#FF316956"/>

        <ListView x:Name="listViewSpells" Grid.Column="2" Grid.Row="2"
            Margin="10,10,10,17"
                  Background="#FFDFF8D0"
                  FontSize="16" FontWeight="Bold" Foreground="#FF316958" BorderBrush="#FFDFF8D0" SelectionChanged="ListView_SelectionChanged_1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zaklęcia" Width="260">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#FF316956"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="btnAddEquip" Content="Dodaj" HorizontalAlignment="Left" 
            Margin="10,2,0,0" Grid.Row="4" 
            FontSize="16" FontWeight="Bold"
            BorderThickness="2"
            Foreground="#FFDFF8D0" Background="#FF89C06F" 
            BorderBrush="#FFDFF8D0"
            Height="39" Width="79" Click="AddEquipment_Click" VerticalAlignment="Top"/>

        <Button x:Name="btnRemoveEquip" Content="Usuń" HorizontalAlignment="Left" 
            FontSize="16" FontWeight="Bold"
            BorderThickness="2"
            Foreground="#FFDFF8D0" Background="#FF89C06F" 
            BorderBrush="#FFDFF8D0"
            Margin="10,0,0,0" Grid.Row="3" 
            Height="39" Width="80" Click="RemoveEquipment_Click"/>

        <Button x:Name="btnAddSpell" Content="Dodaj" HorizontalAlignment="Left" 
                 FontSize="16" FontWeight="Bold"
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 BorderBrush="#FFDFF8D0"
            Margin="207,0,0,0" Grid.Row="4" 
            Height="39" Width="80" Grid.Column="2" Click="AddSpell_Click"/>

        <Button x:Name="btnRemoveSpell" Content="Usuń" HorizontalAlignment="Left" 
                 FontSize="16" FontWeight="Bold"
                 BorderThickness="2"
                 Foreground="#FFDFF8D0" Background="#FF89C06F" 
                 BorderBrush="#FFDFF8D0"
            Margin="206,0,0,0" Grid.Row="3" 
            Height="39" Width="81" Grid.Column="2" Click="RemoveSpell_Click"/>

        <hc:TextBox x:Name="txtNewEquip" HorizontalAlignment="Left" 
            Grid.Row="4" Grid.Column="0"
            Height="38" Margin="94,3,0,0"
            TextWrapping="Wrap" 
            FontWeight="Bold"
            Foreground="#FF316956"
            Background="#FFDFF8D0" BorderBrush="{x:Null}"
            VerticalAlignment="Top" Width="192"/>

        <hc:TextBox x:Name="txtNewSpell" HorizontalAlignment="Left" 
            Grid.Row="4" Grid.Column="2"
            Height="38" Margin="10,0,0,0"
            TextWrapping="Wrap" 
            FontWeight="Bold"
            Foreground="#FF316956"
            Background="#FFDFF8D0" BorderBrush="{x:Null}"
            VerticalAlignment="Center" Width="192"/>

        <Button Content="Zmień statystyki" 
            x:Name="btnChangeStats"
            Height="35" 
            BorderThickness="2"
            Click="ZmianaStatsButton_Click"
            FontSize="16" 
            Background="#FF89C06F" Foreground="#FFDFF8D0" 
            FontWeight="Bold" BorderBrush="#FFDFF8D0"
            Grid.Row="1" Width="186"/>

        <Label Height="39" Width="202" Grid.Row="3"
            Grid.Column="1" 
            BorderBrush="#FFDFF8D0"
            Background="#FF89C06F" 
            Foreground="#FFDFF8D0" 
            FontWeight="Bold" FontSize="16"
            Content="Bonus do umiejętności"
            BorderThickness="2"/>

        <TextBox x:Name="txtBonusUmiejetnosci" Grid.Column="1" IsReadOnly="True"
            HorizontalAlignment="Center" Height="43" TextWrapping="Wrap" 
            Text="+2" VerticalAlignment="Center" 
            Width="45" 
            FontSize="22" Grid.Row="4"
            FontWeight="Bold"
            BorderThickness="2"
            BorderBrush="#FF89C06F" Background="#FFDFF8D0" 
            Foreground="#FF89C06F"/>

    </Grid>
</Window>

