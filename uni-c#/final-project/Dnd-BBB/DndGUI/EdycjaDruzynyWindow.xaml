<Window x:Class="DndGUI.EdycjaDruzynyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndGUI"
        mc:Ignorable="d"
                Title="Zarządzanie Drużyną" Height="500" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="/Images/o2.png" 
                Stretch="UniformToFill"
                 Opacity="0.8"/>
    </Window.Background>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="110"/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <Label Content="Nazwa Drużyny" Grid.Column="0" 
           BorderBrush="{x:Null}"
           Margin="2,0,0,0" Background="#FF89C06F" Foreground="#FFDFF8D0"
           FontWeight="Bold"
           Height="30" Width="130" HorizontalAlignment="Left" />


        <ComboBox x:Name="comboBoxParties" 
              Grid.Row="0" Grid.Column="1"
              DisplayMemberPath="PartyName"
              
              BorderBrush="#FF89C06F"
              BorderThickness="2"
              SelectedItem="{Binding SelectedParty, Mode=TwoWay}" 
                  Background="#FFDFF8D0"
              SelectionChanged="comboBoxParties_SelectionChanged" 
                  FontWeight="Bold" Foreground="#FF30584E"
                   IsEditable="True" IsReadOnly="True" 
                  Text="Wybierz drużynę"/>

        <StackPanel Grid.Row="1" Grid.Column="0" 
                Margin="0,10,10,20">
            <Button x:Name="btnAddMember" Content="Dodaj Członka" 
                Height="30" Width="135" 
                BorderBrush="#FFDFF8D0"
                Margin="0,0,0,10" Background="#FF89C06F" Foreground="#FFDFF8D0"
                FontWeight="Bold"
                BorderThickness="2"
                FontSize="12" Click="btnAddMember_Click"/>
            <Button x:Name="btnRemoveMember" Content="Usuń Członka" 
                Height="30" Width="135" 
                BorderBrush="#FFDFF8D0"
                Margin="0,0,0,10" Background="#FF89C06F" Foreground="#FFDFF8D0"
                FontWeight="Bold"
                BorderThickness="2"
                FontSize="12" Click="btnRemoveMember_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" 
                Margin="0,0,10,14">

            <Button Height="33" 
                MinHeight="30"
                Width="135" 
                x:Name="btnSaveCopyJson"
                    Background="#FFDFF8D0" 
                    Foreground="#FF89C06F"  
                 FontWeight="Bold"
                 BorderThickness="2"
                Margin="0,0,0,10"
                Padding="5" BorderBrush="#FF89C06F"
                Click="btnSaveCopyJson_Click">
                <TextBlock Text="Zapisz kopię do JSON" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
            </Button>

            <Button x:Name="btnSortByHP" Content="Sortuj po HP" 
                Height="30" Width="135" 
                 Background="#FFDFF8D0" 
                 Foreground="#FF89C06F" 
                 FontWeight="Bold"
                 BorderThickness="2"
                Margin="0,0,0,10"
                FontSize="12" Click="btnSortByHp_Click" BorderBrush="#FF89C06F"/>

            <Button x:Name="btnSortByName" Content="Sortuj alfabetycznie" 
                    Height="30" Width="135" 
                     Background="#FFDFF8D0" 
                     Foreground="#FF89C06F" 
                     FontWeight="Bold"
                     BorderThickness="2"
                    Margin="0,0,0,10"
                    FontSize="12" Click="btnSortByName_Click" 
                    BorderBrush="#FF89C06F"/>

            <Button x:Name="btnSortByStr" Content="Sortuj po STR" 
                    Height="30" Width="135" 
                     Background="#FFDFF8D0" 
                     Foreground="#FF89C06F" 
                     FontWeight="Bold"
                     BorderThickness="2"
                    Margin="0,0,0,10"
                    FontSize="12" Click="btnSortByStr_Click" 
                    BorderBrush="#FF89C06F"/>

            <Button x:Name="btnSortByDext" Content="Sortuj po DEX" 
                    Height="30" Width="135" 
                     Background="#FFDFF8D0" 
                     Foreground="#FF89C06F" 
                     FontWeight="Bold"
                     BorderThickness="2"
                    Margin="0,0,0,10"
                    FontSize="12" Click="btnSortByDext_Click" 
                    BorderBrush="#FF89C06F"/>

            <Button x:Name="btnSaveChanges" Content="Zapisz zmiany" 
                Height="30" Width="135" 
                 Background="#FF89C06F" 
                 Foreground="#FF316956" 
                 FontWeight="Bold"
                 BorderThickness="2"
                FontSize="12" Click="btnSaveChanges_Click" BorderBrush="#FF2F6754"/>
        </StackPanel>

        <Border Grid.Row="2" Grid.Column="1"
            Margin="0,5,0,0">
            <ListBox x:Name="listBoxMembers"
                      Margin="0,-65,0,65" Background="#FFDFF8D0" 
                           
                          BorderBrush="#FFDFF8D0"
                          BorderThickness="2"
                          Foreground="#FF316956"
                          DisplayMemberPath="Name"/>
        </Border>


        <ComboBox x:Name="comboBoxAvailableCharacters" 
            DisplayMemberPath="Name"
            Grid.Row="1" Grid.Column="1"
            BorderBrush="#FF89C06F"
            BorderThickness="2"
            IsEditable="True" IsReadOnly="True" 
            Text="Wybierz postać"
            Background="#FFDFF8D0" FontWeight="Bold" 
                 Foreground="#FF30584E" 
                 Margin="0,10,0,70" 
                 />


        <TextBox x:Name="txtPartyName" Visibility="Collapsed"/>
    </Grid>
</Window>

