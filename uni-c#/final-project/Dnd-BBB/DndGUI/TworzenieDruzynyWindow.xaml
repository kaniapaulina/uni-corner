<Window x:Class="DndGUI.TworzenieDruzynyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndGUI"
        mc:Ignorable="d"
                Title="Tworzenie Drużyny" Height="350" Width="450">
    <Window.Background>
        <ImageBrush ImageSource="/Images/o2.png" 
                Stretch="UniformToFill"
                    Opacity="0.8"/>
    </Window.Background>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nazwa drużyny" 
           Grid.Row="0" Grid.Column="0"
           VerticalAlignment="Top"
           Height="30"
           Margin="9,0,0,0" Background="#FF89C06F" 
               Foreground="#FFDFF8D0" FontWeight="Bold" BorderBrush="#FF89C06F" HorizontalAlignment="Left" />

        <TextBox x:Name="txtNazwa" 
             Grid.Row="0" Grid.Column="1"
             TextWrapping="Wrap" 
             BorderBrush="#FF89C06F"
             BorderThickness="2"
             Height="30"
             Margin="0,0,0,10" Background="#FFDFF8D0" Foreground="#FF316455" FontWeight="Bold"/>


        <Grid Grid.Row="2" Grid.Column="1" Margin="1,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ComboBox x:Name="cmbPostaci" 
                Grid.Row="0"
                IsEditable="True" IsReadOnly="True" 
                Text="Wybierz postać"
                DisplayMemberPath="Name"
                BorderBrush="#FF89C06F"
                BorderThickness="2"
                Height="30"
                Margin="0,0,0,8" Background="#FFDFF8D0" Foreground="#FF316455" FontWeight="Bold"
                VerticalAlignment="Top"/>

            <ListBox Grid.Row="1"
                 x:Name="listBoxCharacters"
                 Margin="0,0,0,0"
                 BorderBrush="#FF89C06F" Background="#FFDFF8D0"/>
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="0"
                VerticalAlignment="Top"
                Margin="4,0,10,0" Height="124">
            <Button Content="Dodaj członka" 
                    Width="109"
                   BorderBrush="#FFDFF8D0" 
                     Background="#FF89C06F" 
                     Foreground="#FFDFF8D0" 
                    BorderThickness="2"
                    Click="DodajButton_Click"
                     FontWeight="Bold" Height="33"/>
            <Label Content="Skład:"
           BorderBrush="#FF89C06F" 
                   Margin="5"
                   Background="#FF89C06F" 
                   Foreground="#FFDFF8D0" 
                   FontWeight="Bold"
                   BorderThickness="2"
           Width="109" Height="29"/>
            <Button x:Name="btnZapiszDruzyny" Content="Zapisz drużynę" Click="ZapiszDruzyny_Click" 
                Width="109"
                BorderThickness="2"
                FontWeight="Bold"
                BorderBrush="#FF89C06F"
                    Background="#FFDFF8D0" 
                    Foreground="#FF89C06F" Height="33"/>
        </StackPanel>
    </Grid>
</Window>
