<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <ListBox x:Name="lbRooms" HorizontalAlignment="Left" Height="166" Margin="25,51,0,0" VerticalAlignment="Top" Width="515" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="Rooms" HorizontalAlignment="Left" Background="Plum" Height="30" Margin="25,16,0,0" VerticalAlignment="Top" Width="515"/>


        <Label Content="Select Standard" Background="Plum" HorizontalAlignment="Left" Height="30" Margin="560,16,0,0" VerticalAlignment="Top" Width="195"/>
        <ComboBox x:Name="cbStandard" HorizontalAlignment="Left" Height="43" Margin="560,52,0,0" VerticalAlignment="Top" Width="195">
            <ComboBoxItem x:Name="cbEcon">economic</ComboBoxItem>
            <ComboBoxItem x:Name="cbHigh">high_standard</ComboBoxItem>
            <ComboBoxItem x:Name="cbLux">luxury</ComboBoxItem>
            <ComboBoxItem x:Name="cbSup">superb</ComboBoxItem>
        </ComboBox>


        <Button x:Name="btnAdd" Content="Add Room" HorizontalAlignment="Left" Height="35" Margin="560,100,0,0" VerticalAlignment="Top" Width="195" Click="btnAdd_Click"/>
        <Button x:Name="btnRent" Content="Rent Room" HorizontalAlignment="Left" Height="35" Margin="560,140,0,0" VerticalAlignment="Top" Width="195" Click="btnRent_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Height="35" Margin="560,182,0,0" VerticalAlignment="Top" Width="195" Click="btnExit_Click"/>

        <TextBlock x:Name="tbGain" Background="Plum" HorizontalAlignment="Left" Margin="25,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="27" Width="730"/>
        <ListBox x:Name="lbReservations" HorizontalAlignment="Left" Height="148" Margin="25,266,0,0" VerticalAlignment="Top" Width="730" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </Grid>
</Window>
