<Window x:Class="CarshopGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarshopGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbVehicles" HorizontalAlignment="Left" Height="350" Margin="25,64,0,0" VerticalAlignment="Top" Width="455" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBlock x:Name="tbNapis" HorizontalAlignment="Left" Margin="25,24,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="35" Width="455"/>
        <ComboBox x:Name="cbType" HorizontalAlignment="Left" Height="40" Margin="520,64,0,0" VerticalAlignment="Top" Width="240">
            <ComboBoxItem>Car</ComboBoxItem>
            <ComboBoxItem>Truck</ComboBoxItem>
        </ComboBox>
        <Button x:Name="btnAdd" Content="Add Vehicle" HorizontalAlignment="Left" Height="40" Margin="520,124,0,0" VerticalAlignment="Top" Width="240" Click="btnAdd_Click"/>
        <Button x:Name="btnToggle" Content="Toggle Rent" HorizontalAlignment="Left" Height="40" Margin="520,192,0,0" VerticalAlignment="Top" Width="240" Click="btnToggle_Click"/>
        <Button x:Name="btnClose" Content="Close Shop" HorizontalAlignment="Left" Height="50" Margin="520,364,0,0" VerticalAlignment="Top" Width="240" Click="btnClose_Click"/>
        <Button x:Name="btnBest" Content="Select Best Vehicles" HorizontalAlignment="Left" Height="40" Margin="520,254,0,0" VerticalAlignment="Top" Width="240" Click="btnBest_Click"/>

    </Grid>
</Window>
