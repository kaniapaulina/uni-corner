<Window x:Class="BoardGameMenager.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardGameMenager.Core"
        mc:Ignorable="d"
        Title="Menedżer Turnieju Planszowego" Height="450" Width="800" Background="LightGreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Header="Lista Graczy" Grid.Row="0" Margin="10,10,10,10">
            <ListBox x:Name="ListBoxPlayers" SelectionChanged="ListBoxPlayers_SelectionChanged"/>
        </GroupBox>
        <GroupBox Header="Szczegóły gracza" Grid.Column="1" Margin="10,10,10,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="tbNick" Text="{Binding Nick}" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="20" FontWeight="Bold"></TextBlock>
                <TextBlock Text="Średnia Punktów: " HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TextBlockAvg" Text="" HorizontalAlignment="Left" Margin="0,0,0,10"></TextBlock>
                <TextBlock Text="Wysokość nagrody "></TextBlock>
                <TextBlock x:Name="TextBlockReward" Text="" HorizontalAlignment="Left" Margin="0,0,0,10"></TextBlock>
            </StackPanel>
        </GroupBox>

        <Button x:Name="ButtonClose" Content="Zamknij" Background="DarkGreen" Foreground="White" Grid.Row="1" Grid.Column="1" Click="ButtonClose_Click"></Button>
        
    </Grid>
</Window>
